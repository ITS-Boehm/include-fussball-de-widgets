{
  "name": "include-fussball-de-widgets",
  "version": "0.0.0-development",
  "private": true,
  "description": "A WordPress plugin for easy integration of fussball.de widgets.",
  "homepage": "https://github.com/ITS-Boehm/include-fussball-de-widgets#readme",
  "bugs": {
    "url": "https://github.com/ITS-Boehm/include-fussball-de-widgets/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ITS-Boehm/include-fussball-de-widgets.git"
  },
  "license": "GPL-2.0-or-later",
  "author": "IT-Service Böhm -- Alexander Böhm",
  "scripts": {
    "build": "rimraf dist && webpack && yarn run i18n",
    "clear": "rimraf dist",
    "commit": "git-cz",
    "dev": "yarn run build && node ./tasks/cp-dev-release.js",
    "i18n": "yarn run i18n:json && yarn run i18n:copy",
    "i18n:copy": "cpr src/languages dist/languages -d",
    "i18n:json": "wp i18n make-json src/languages/include-fussball-de-widgets-de_DE.po --no-purge",
    "i18n:pot": "wp i18n make-pot dist languages/include-fussball-de-widgets.pot --slug=include-fussball-de-widgets --domain=include-fussball-de-widgets --package-name=\"Include Fussball.de Widgets\"",
    "lint": "yarn run lint:css && yarn run lint:js",
    "lint:css": "stylelint 'src/**/*.scss'",
    "lint:css:fix": "stylelint 'src/**/*.scss' --fix",
    "lint:fix": "concurrently \"yarn:lint:*:fix\"",
    "lint:js": "eslint 'src/**/*.js'",
    "lint:js:fix": "prettier-eslint \"$PWD/src/**/*.js\" --write",
    "release": "yarn run build && yarn run release:copy && yarn run release:github",
    "release:copy": "cpr dist .releases/include-fussball-de-widgets/trunk/ -d",
    "release:github": "cpr dist .github-releases/include-fussball-de-widgets -d && cd .github-releases/ && bestzip include-fussball-de-widgets.zip include-fussball-de-widgets && rimraf include-fussball-de-widgets && cd ..",
    "semantic-release": "semantic-release",
    "start": "wp-scripts start",
    "test": "yarn run test:cs && yarn run test:phpunit:full",
    "test:cs": "./vendor/bin/phpcs",
    "test:phpunit": "./vendor/bin/phpunit --no-coverage",
    "test:phpunit:full": "./vendor/bin/phpunit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": "stylelint 'src/**/*.scss' --fix",
    "*.js": "prettier-eslint \"$PWD/src/**/*.js\" --write"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "dependencies": {
    "@yarnpkg/pnpify": "^2.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@semantic-release/changelog": "^5.0.1",
    "@wordpress/babel-preset-default": "^4.18.1",
    "@wordpress/browserslist-config": "^2.7.0",
    "@wordpress/dependency-extraction-webpack-plugin": "^2.8.0",
    "@wordpress/scripts": "^12.2.1",
    "autoprefixer": "^10.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "bestzip": "^2.1.7",
    "commitizen": "^4.2.1",
    "copy-webpack-plugin": "^6.1.1",
    "cpr": "^3.0.1",
    "css-loader": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.9.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.2",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.0",
    "indent-string": "^4.0.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "mini-css-extract-plugin": "^0.11.2",
    "pnp-webpack-plugin": "^1.6.4",
    "postcss-html": "^0.36.0",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.1.2",
    "prettier-eslint": "^11.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "prettier-standard": "16.4.1",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^3.0.2",
    "sass": "^1.26.11",
    "sass-loader": "^10.0.2",
    "semantic-release": "^17.1.2",
    "stylelint": "^13.7.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-wordpress": "^17.0.0",
    "stylelint-order": "^4.1.0",
    "terser-webpack-plugin": "^4.2.2",
    "thread-loader": "^3.0.0",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12",
    "webpack-livereload-plugin": "^2.3.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "next",
        "prerelease": "beta"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github"
    ]
  }
}
