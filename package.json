{
  "name": "include-fussball-de-widgets",
  "version": "3.1.3",
  "description": "A WordPress plugin for easy integration of fussball.de widgets.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ITS-Boehm/include-fussball-de-widgets.git"
  },
  "author": "IT-Service Böhm -- Alexander Böhm",
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/ITS-Boehm/include-fussball-de-widgets/issues"
  },
  "homepage": "https://github.com/ITS-Boehm/include-fussball-de-widgets#readme",
  "scripts": {
    "clear": "rimraf dist/*",
    "build": "wp-scripts build",
    "dev": "npm run clear && npm run build && npm run i18n && node ./tasks/cp-dev-release.js",
    "lint:css": "stylelint 'src/**/*.scss'",
    "lint:css:fix": "stylelint 'src/**/*.scss' --fix",
    "lint:js": "eslint 'src/**/*.js'",
    "lint:js:fix": "prettier-eslint \"$PWD/src/**/*.js\" --write",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:fix": "concurrently \"npm:lint:*:fix\"",
    "start": "wp-scripts start",
    "i18n:pot": "wp i18n make-pot dist languages/include-fussball-de-widgets.pot --slug=include-fussball-de-widgets --domain=include-fussball-de-widgets --package-name=\"Include Fussball.de Widgets\"",
    "i18n:json": "wp i18n make-json languages/include-fussball-de-widgets-de_DE.po --no-purge",
    "i18n:copy": "cpr languages dist/languages",
    "i18n": "npm run i18n:json && npm run i18n:copy",
    "release:copy": "cpr dist/ .releases/include-fussball-de-widgets/trunk/ -d",
    "release:github": "cpr ./dist/ .github-releases/include-fussball-de-widgets -d && cd .github-releases/ && bestzip include-fussball-de-widgets-v3.1.3.zip include-fussball-de-widgets && rimraf include-fussball-de-widgets && cd ..",
    "release": "npm run build && npm run release:copy && npm run release:github",
    "test:cs": "./vendor/bin/phpcs",
    "test:phpunit": "./vendor/bin/phpunit --no-coverage",
    "test:phpunit:full": "./vendor/bin/phpunit",
    "test": "npm run test:cs && npm run test:phpunit:full"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": "stylelint 'src/**/*.css' --fix",
    "*.js": "prettier-eslint \"$PWD/src/**/*.js\" --write"
  },
  "devDependencies": {
    "@wordpress/browserslist-config": "^2.6.0",
    "@wordpress/scripts": "^7.1.3",
    "autoprefixer": "^9.7.5",
    "bestzip": "^2.1.5",
    "copy-webpack-plugin": "^5.1.1",
    "cpr": "^3.0.1",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-semistandard": "^15.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "prettier": "^2.0.2",
    "prettier-eslint": "^9.0.1",
    "prettier-standard": "16.2.1",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^3.0.2",
    "sass-loader": "^8.0.2",
    "semistandard": "14.2.0",
    "stylelint": "^13.2.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-wordpress": "^16.0.0",
    "stylelint-order": "^4.0.0",
    "terser-webpack-plugin": "^2.3.5"
  },
  "dependencies": {}
}
