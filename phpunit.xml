<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap.php"
         colors="true"
         verbose="true"
         stopOnFailure="false">
  <testsuites>
    <testsuite name="Test suite">
      <directory suffix=".php">./tests/</directory>
    </testsuite>
    <logging>
      <log type="coverage-html"
           target="tests/coverage"
           showUncoveredFiles="true"
           charset="UTF-8"
           highlight="true"
           lowUpperBound="35"
           highLowerBound="70" />
    </logging>
  </testsuites>
</phpunit>
